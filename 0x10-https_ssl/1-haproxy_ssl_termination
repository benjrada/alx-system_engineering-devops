global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin
	ssl-dh-param-file /etc/haproxy/dhparams.pem

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend th3gr00t-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/letsencrypt/live/www.benjrada.tech/fullchain.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend th3gr00t-tech-backend

backend th3gr00t-tech-backend
	balance roundrobin
	server 368908-web-01 54.160.83.208:80 check
	server 368908-web-02 100.25.190.254 check
